<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="kont2018.farkle.fx.DiceScorerController">
	<HBox>
		<Label text="Die values: "/>
		<TextField fx:id="dieValuesInput"/>
	</HBox>
	<HBox>
		<Button onAction="#testSingleValue" text="Test SingleValue"/>
		<Button onAction="#testStraight" text="Test Straight"/>
		<Button onAction="#testNothing" text="Test Nothing"/>
	</HBox>
	<HBox>
		<Label text="Points: "/>
		<Label fx:id="scoreOutput" text=""/>
	</HBox>
	<HBox>
		<Label text="For values: "/>
		<Label fx:id="diceOutput" text=""/>
	</HBox>
</VBox>
