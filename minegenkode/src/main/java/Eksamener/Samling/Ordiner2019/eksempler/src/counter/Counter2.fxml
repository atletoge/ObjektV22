<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="counter.CounterController2">
	<HBox>
		<TextField fx:id="endInput" promptText="end"/>
		<Button text="New Counter" onAction="#handleNewCounterAction"/>
	</HBox>
	<HBox>
		<Label fx:id="counterOutput"  text="Current counter value: 0"/>
		<Button fx:id="countAction" text="Count" onAction="#handleCountAction"/>
	</HBox>
</VBox>
